<odoo>
	<data>
		<record id="res_config_settings_view_form_inherited_number_days"
			model="ir.ui.view">
			<field name="name">res.config.settings.view.form.inherit.account.graces.days
			</field>
			<field name="model">res.config.settings</field>
			<field name="priority" eval="40" />
			<field name="inherit_id" ref="crm.res_config_settings_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//div[@id='crm_lead']" position="before">
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane">
						</div>
						<div class="o_setting_right_pane">
							<label string="Number Of Days" for="no_of_days" />
							<div class="mt8">
								<field name="no_of_days" nolable="0" />
							</div>
						</div>
					</div>
				</xpath>
			</field>
		</record>
	</data>
</odoo>